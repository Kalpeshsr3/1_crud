<%- include('../views/partials/header.ejs') %>
    
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-sm-6 mt-5 ">
            <h2 class="alert alert-success text-center" role="alert">
                Update Student</h2>

                <form method="post" action="/student/update/<%= data._id %>">
                    <div class="form-group mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name" 
                        value="<%= data.name %>">

                      </div>
                      <div class="form-group mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" name="age" id="age"
                        value="<%= data.age %>" >

                      </div>
                      <div class="form-group mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" name="fees" id="fees"
                        value="<%= data.fees %>" ><!--value attribute mai hum jis 
                        particular id pe click kiye the uski fields ki value show 
                      kar rahe hai -->

                      </div>
                      <button class="btn btn-success" type="submit">Update</button>
                      <button class="btn btn-warning" type="submit">Back to home</button>
                </form>
        </div>
        
    </div>
</div>

<%- include('../views/partials/footer.ejs') %>




